OSFLAG :=
BIN_EXT :=
Remove_Binary :=

ifeq ($(OS),Windows_NT)
	OSFLAG = Windows
	BIN_EXT = .exe
	Remove_Binary = del readpe.exe
else
	OSFLAG = Linux
	Remove_Binary = rm readpe
endif

all: install
	gcc -o readpe$(BIN_EXT) readpe.c -L lib -lpetest
	@echo Software BUILDED successfully

install:
	make -C lib 
	make install -C lib

clear:
	make clear -C lib
	$(Remove_Binary)
	@echo Software CLEAN successfully

uninstall:
	[TO DO]
	@echo Software UNINSTALLED successfully